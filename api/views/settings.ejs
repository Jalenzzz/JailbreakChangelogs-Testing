      name="description"
      content="Redeem your Jailbreak Changelogs codes and claim exclusive rewards. Enter your code to receive special items and bonuses."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jailbreakchangelogs.xyz/redeem" />
    <meta property="og:title" content="<%= title %>" />
    <meta
      property="og:description"
      content="Redeem your Jailbreak Changelogs codes and claim exclusive rewards. Enter your code to receive special items and bonuses."
    />
    <meta property="og:image" content="<%= logoUrl %>" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#124e66" />

    <!-- Stylesheets -->
