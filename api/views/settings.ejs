    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/JBChangelogs/JailbreakChangelogs@2.0.0/styles/colors.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/JBChangelogs/JailbreakChangelogs@2.0.0/styles/settings.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/JBChangelogs/JailbreakChangelogs@2.0.0/styles/main.min.css"
    />

    <style>
      .setting-highlight {
        animation: highlight-pulse 6s ease-in-out;
        background-color: rgba(18, 78, 102, 0.2);
      }

      @keyframes highlight-pulse {
        0% { background-color: rgba(18, 78, 102, 0.2); }
        25% { background-color: rgba(18, 78, 102, 0.4); }
        50% { background-color: rgba(18, 78, 102, 0.2); }
        75% { background-color: rgba(18, 78, 102, 0.4); }
        100% { background-color: rgba(18, 78, 102, 0.2); }
      }
    </style>

    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="apple-touch-icon" href="/assets/logos/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Changelogs">
    <meta name="application-name" content="Changelogs">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Montserrat:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.css"
