  <body data-scroll-container>
    <!-- prettier-ignore -->
    <%- include('partials/nav') %>
    <%- include('partials/loading') %>

    <!-- Main Content -->
    <div class="container-fluid mt-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Settings</li>
        </ol>
      </nav>
    </div>

    <div class="container mt-4">
      <div class="row">
        <div class="col-12">
          <div class="card shadow-lg" style="background-color: #212a31">
            <div class="card-body">
              <!-- Profile Settings Section -->
              <div class="mb-4">
                <h5>Profile Settings</h5>
                <div class="list-group">
                  <!-- Core Privacy Settings -->
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="profile_public"
                        data-setting="profile_public"
                      />
                      <label class="form-check-label" for="profile_public">
                        <h6 class="mb-1">Public Profile</h6>
                        <small class="text-muted">Allow others to view your profile</small>
                      </label>
                    </div>
                  </div>
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="hide_presence"
                        data-setting="hide_presence"
                      />
                      <label class="form-check-label" for="hide_presence">
                        <h6 class="mb-1">Hide Presence</h6>
                        <small class="text-muted">Hide your online status from others</small>
                      </label>
                    </div>
                  </div>
                  
                  <!-- Content Visibility -->
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="show_comments"
                        data-setting="show_recent_comments"
                      />
                      <label class="form-check-label" for="show_comments">
                        <h6 class="mb-1">Show Recent Comments</h6>
                        <small class="text-muted">Display your recent comments on your profile</small>
                      </label>
                    </div>
                  </div>
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="hide_favorites"
                        data-setting="hide_favorites"
                      />
                      <label class="form-check-label" for="hide_favorites">
                        <h6 class="mb-1">Hide Favorites</h6>
                        <small class="text-muted">Hide your favorites from others</small>
                      </label>
                    </div>
                  </div>

                  <!-- Social Connections -->
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="hide_following"
                        data-setting="hide_following"
                      />
                      <label class="form-check-label" for="hide_following">
                        <h6 class="mb-1">Hide Following</h6>
                        <small class="text-muted">Hide your following list from others</small>
                      </label>
                    </div>
                  </div>
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="hide_followers"
                        data-setting="hide_followers"
                      />
                      <label class="form-check-label" for="hide_followers">
                        <h6 class="mb-1">Hide Followers</h6>
                        <small class="text-muted">Hide your followers list from others</small>
                      </label>
                    </div>
                  </div>
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="hide_connections"
                        data-setting="hide_connections"
                      />
                      <label class="form-check-label" for="hide_connections">
                        <h6 class="mb-1">Hide Connections</h6>
                        <small class="text-muted">Hide your linked accounts from others</small>
                      </label>
                    </div>
                  </div>

                  <!-- Communication Settings -->
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="dms_allowed"
                        data-setting="dms_allowed"
                      />
                      <label class="form-check-label" for="dms_allowed">
                        <h6 class="mb-1">Allow DMs from Bot</h6>
                        <small class="text-muted">Allow our Discord bot to send you direct messages</small>
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Appearance Settings Section -->
              <div class="mb-4">
                <h5>Appearance Settings</h5>
                <div class="list-group">
                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="banner_discord"
                        data-setting="banner_discord"
                      />
                      <label class="form-check-label" for="banner_discord">
                        <h6 class="mb-1">Use Discord Banner</h6>
                        <small class="text-muted">Use your Discord banner as profile background</small>
                      </label>
                    </div>
                    <small class="text-warning premium-requirement" style="display: none;">Supporter 2+ is required to change this setting.</small>
                  </div>

                  <!-- Custom Banner Input -->
                  <div class="list-group-item" id="custom_banner_input">
                    <h6 class="mb-2">Custom Banner URL</h6>
                    <div class="input-group">
                      <input
                        type="text"
                        id="bannerInput"
                        class="form-control"
                        placeholder="Enter image URL"
                        aria-label="Custom banner URL"
                      />
                      <button
                        class="btn btn-primary"
                        type="button"
                        id="updateBannerBtn"
                      >
                        Update Banner
                      </button>
                    </div>
                    <small class="text-muted d-block mt-1">Enter a direct link to your custom banner image</small>
                    <div class="image-upload-help mt-2">
                      <small class="text-warning d-block">Important: Use the direct image link, not the sharing link!</small>
                      <small class="d-block mt-1">Upload your image using one of these sites:</small>
                      <div class="upload-sites mt-1">
                        <a href="https://imgbb.com/" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">ImgBB</a>
                        <a href="https://postimages.org/" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">PostImages</a>
                        <a href="https://tenor.com/" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">Tenor</a>
                      </div>
                    </div>
                    <small class="text-warning premium-requirement" style="display: none;">Supporter 2+ is required to change this setting.</small>
                  </div>

                  <div class="list-group-item">
                    <div class="form-check form-switch">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="avatar_discord"
                        data-setting="avatar_discord"
                      />
                      <label class="form-check-label" for="avatar_discord">
                        <h6 class="mb-1">Use Discord Avatar</h6>
                        <small class="text-muted">Use your Discord avatar as profile picture</small>
                      </label>
                    </div>
                    <small class="text-warning premium-requirement" style="display: none;">Supporter 2+ is required to change this setting.</small>
                  </div>
                  <!-- Custom Avatar Input -->
                  <div class="list-group-item" id="custom_avatar_input">
                    <h6 class="mb-2">Custom Avatar URL</h6>
                    <div class="input-group">
                      <input
                        type="text"
                        id="avatarInput"
                        class="form-control"
                        placeholder="Enter image URL"
                        aria-label="Custom avatar URL"
                      />
                      <button
                        class="btn btn-primary"
                        type="button"
                        id="updateAvatarBtn"
                      >
                        Update Avatar
                      </button>
                    </div>
                    <small class="text-muted d-block mt-1">Enter a direct link to your custom avatar image</small>
                    <div class="image-upload-help mt-2">
                      <small class="text-warning d-block">Important: Use the direct image link, not the sharing link!</small>
                      <small class="d-block mt-1">Upload your image using one of these sites:</small>
                      <div class="upload-sites mt-1">
                        <a href="https://imgbb.com/" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">ImgBB</a>
                        <a href="https://postimages.org/" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">PostImages</a>
                        <a href="https://tenor.com/" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">Tenor</a>
                      </div>
                    </div>
                    <small class="text-warning premium-requirement" style="display: none;">Supporter 2+ is required to use this setting.</small>
                  </div>
                </div>
              </div>

              <!-- Account Management Section -->
              <div class="mb-4">
                <h5>Account Management</h5>
                <div class="list-group">
                  <div id="roblox-account-section" class="list-group-item" style="background-color: #2e3944; display: none;">
                    <h6 class="mb-3">Connected Roblox Account</h6>
                    <div class="alert alert-info mb-3">
                      <p class="mb-0">Currently connected to Roblox account: <strong><a id="roblox-profile-link" href="#" target="_blank" rel="noopener noreferrer" style="color: inherit; text-decoration: none;"></a></strong></p>
                    </div>
                    <div id="disconnect-confirmation" class="alert alert-warning mb-3" style="display: none;">
                      <h6 class="alert-heading">Are you sure?</h6>
                      <p class="mb-2">Disconnecting your Roblox account will:</p>
                      <ul class="mb-0">
                        <li>Remove your Roblox profile from your account</li>
                        <li>Disable trading features and delete all existing trade ads</li>
                        <li>Require re-authentication to use Trading features again</li>
                      </ul>
                      <div class="mt-3">
                        <button id="confirm-disconnect" class="btn btn-danger me-2">Yes, Disconnect</button>
                        <button id="cancel-disconnect" class="btn btn-secondary">No, Keep Connected</button>
                      </div>
                    </div>
                    <button id="disconnect-roblox-button" class="btn btn-warning">
                      Disconnect Roblox Account
                    </button>
                  </div>
                  <div
                    class="list-group-item"
                    style="background-color: #2e3944"
                  >
                    <h6 class="mb-3">Delete Account</h6>
                    <div class="alert alert-warning mb-3">
                      <h6 class="alert-heading">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 64 64"
                        >
                          <rect width="64" height="64" fill="none" />
                          <path
                            fill="#ffce31"
                            d="M5.9 62c-3.3 0-4.8-2.4-3.3-5.3L29.3 4.2c1.5-2.9 3.9-2.9 5.4 0l26.7 52.5c1.5 2.9 0 5.3-3.3 5.3z"
                          />
                          <g fill="#231f20">
                            <path
                              d="m27.8 23.6l2.8 18.5c.3 1.8 2.6 1.8 2.9 0l2.7-18.5c.5-7.2-8.9-7.2-8.4 0"
                            />
                            <circle cx="32" cy="49.6" r="4.2" />
                          </g>
                        </svg>
                        Warning
                      </h6>
                      <p class="mb-0">Deleting your account will:</p>
                      <ul class="mb-0 mt-2">
                        <li>Permanently delete all your data</li>
                        <li>Remove all your favorites</li>
                        <li>Delete your profile and settings</li>
                        <li>Remove your following/follower relationships</li>
                        <li>This action cannot be undone</li>
                      </ul>
                    </div>
                    <div id="delete-account-section">
                      <button id="delete-account-button" class="btn btn-danger">
                        Delete Account
                      </button>
                      <div
                        id="delete-confirmation"
                        class="mt-3"
                        style="display: none"
                      >
                        <div class="alert alert-danger">
                          <strong>Final Warning:</strong> Account deletion will
                          begin in
                          <span id="deletion-countdown">10</span> seconds
                        </div>
                        <p class="text-danger fw-bold">
                          Are you absolutely sure? This action is permanent and
                          irreversible.
                        </p>
                        <button id="confirm-delete" class="btn btn-danger me-2">
                          Yes, Delete My Account
                        </button>
                        <button id="cancel-delete" class="btn btn-secondary">
                          No, Keep My Account
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

