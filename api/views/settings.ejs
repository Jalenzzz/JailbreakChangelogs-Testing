      integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/gh/JBChangelogs/JailbreakChangelogs@2.0.26/scripts/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/JBChangelogs/JailbreakChangelogs@2.0.26/scripts/settings.min.js"></script>
  </body>
</html>
